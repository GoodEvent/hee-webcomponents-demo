{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "target": "ESNext",
        "allowJs": true,
        "jsx": "react",
        "baseUrl": "./",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "webpack",
        "postcss.config.js"
    ],
    "include": [
        "src"
    ]
}